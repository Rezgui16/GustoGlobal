@model GustoLib.Data.Etape

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Etape</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Instruction" class="control-label">Instruction</label>
                <input asp-for="Instruction" class="form-control" />
                <span asp-validation-for="Instruction" class="text-danger"></span>
            </div>
            <p>
                <div class="form-group">
                    <label asp-for="Nom" class="control-label">Nom de l'étape:</label>
                    <input asp-for="Nom" class="form-control" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
            </p>
            <div class="form-group">
                <label asp-for="RecetteID" class="control-label"></label>
                <select asp-for="RecetteID" class ="form-control" asp-items="ViewBag.RecetteID"></select>
            </div>
            <p>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </p>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
